{
  "framework": "qunit",
  "test_page": "dist/tests/index.html?hidepassed",
  "src_files": [
    "tests/**/*.js",
    "src/**/*.js"
  ],
  "launch_in_dev": [
    "Chrome"
  ],
  "launch_in_ci": [
    "Chrome",
    "Firefox",
    "Safari"
  ],
  "browser_args": {
    "Chrome": [
      "--disable-gpu",
      "--headless",
      "--remote-debugging-port=9222",
      "--window-size=1440,900"
    ]
  }
}
